<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Variable (module, public)</Title>
      <Shortcut>varmodext</Shortcut>
      <Description>Code snippet for declaring a module variable that is visible externally</Description>
      <Author>Quest Software, Inc.</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>type</ID>
          <Default>string</Default>
          <ToolTip>The type of the variable</ToolTip>
        </Literal>
        <Literal>
          <ID>name</ID>
          <Default>MyVariable</Default>
          <ToolTip>The name to give to the variable</ToolTip>
        </Literal>
        <Literal>
          <ID>value</ID>
          <Default>'PowerShell rocks!'</Default>
          <ToolTip>The value to assign to that variable</ToolTip>
        </Literal>
      </Declarations>
      <Code Language="powershell">
        <![CDATA[[$type$]$$name$ = $value$
Export-ModuleMember -Variable $name$$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>